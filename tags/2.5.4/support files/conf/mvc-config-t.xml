<?xml version="1.0" encoding="UTF-8"?>
<app	xmlns="http://www.bruce.com"
		xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
		xsi:schemaLocation="http://www.bruce.com xsd/mvc-config-include.xsd">
	<actions>
		<action name="testupload">
			<result>/jsp/test/upload/test_upload.jsp</result>
		</action>
		<action name="checkupload" class="action.test.CheckUpload">
			<result name="success">/jsp/test/upload/success.jsp</result>
			<result name="error">/jsp/test/upload/error.jsp</result>
		</action>
		<action name="testdownload" class="action.test.TestDownload" />
		<action name="testi18n" class="action.test.TestI18N">
			<result>/jsp/test/i18n/set_locale.jsp</result>
		</action>
		<action name="testbean">
			<result>/jsp/test/bean/test_bean.jsp</result>
		</action>
		<action name="checkbean" class="action.test.CheckBean">
			<result>/jsp/test/bean/result.jsp</result>
		</action>
		<action name="testbean2">
			<result>/jsp/test/bean2/test_bean.jsp</result>
		</action>
		<action name="checkbean2" class="action.test.CheckBean2">
			<result>/jsp/test/bean2/result.jsp</result>
		</action>
		<action name="testbean3">
			<result>/jsp/test/bean3/test_bean.jsp</result>
		</action>
		<action name="checkbean3" class="action.test.CheckBean3">
			<result>/jsp/test/bean3/result.jsp</result>
		</action>
		<action name="testexception" class="action.test.TestException">
			<result name="success" type="finish" />
			<result name="exception">/jsp/test/exception/error.jsp</result>
			<exception-mapping exception="java.lang.IllegalArgumentException" result="success"/>
		</action>
	</actions>
	<actions path="/test-db">
		<action name="testquerydb1" class="action.test.TestQueryDB1">
			<result type="chain">./testupdatedb2</result>
		</action>
		<action name="testupdatedb2" class="action.test.TestUpdateDB2">
			<result>/jsp/test/db/update_age.jsp</result>
			<result name="error">/jsp/test/db/update_age_fail.jsp</result>
		</action>
		<action name="testmybatis" class="action.test.TestMyBatis" />
	</actions>
</app>