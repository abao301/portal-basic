<?xml version="1.0" encoding="UTF-8"?>
<app	xmlns="http://www.bruce.com"
		xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
		xsi:schemaLocation="http://www.bruce.com xsd/mvc-config-main.xsd">
	<global>
		<!-- request 和 response 的默认编码（可选，默认：不设置） -->
		<encoding>UTF-8</encoding>
		<!-- Action 请求的后缀（可选，默认：.action） -->
		<action-suffix>.action</action-suffix>
		
		<action-filters>
			<filter pattern="action.*" class="global.ActionFilter1"/>
			<filter pattern="action.test.*" class="global.ActionFilter2"/>
			<filter pattern="action.test.TestI18N" class="global.ActionFilter3"/>
			<filter pattern="action.test.TestI.*" class="global.ActionFilter3"/>
			<filter pattern="not.init.+" class="global.ActionFilter4"/>
		</action-filters>
		
		<global-results>
			<result name="none" type="finish"/>
			<result name="login">jsp/test/db/update_age_fail.jsp</result>
		</global-results>

		<global-exception-mappings>
			<exception-mapping exception="java.lang.RuntimeException" result="exception"/>
		</global-exception-mappings>
	</global>
	
	<include file="mvc-config-t.xml"/>
	
	<actions>
		<action name="index">
			<result>jsp/index.jsp</result>
		</action>
	</actions>
	
	<actions path="/main">
		<action name="testi18n" class="action.test.TestI18N">
			<result>/jsp/test/i18n/set_locale.jsp</result>
		</action>
	</actions>
	<actions></actions>
</app>